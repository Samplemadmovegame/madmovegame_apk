<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dim_50dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="@dimen/dim_5dp"
        android:id="@+id/img_back_view"
        app:cardCornerRadius="@dimen/dim_10dp">

        <ImageView
            android:id="@+id/s_image"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@drawable/cricket_icon_fill" />

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_20dp"
        android:layout_marginTop="@dimen/dim_5dp"
        android:gravity="center_horizontal"
        android:text="cricket"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dim_10sp" />

</LinearLayout>
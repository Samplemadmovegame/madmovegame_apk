<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_70dp"
    android:layout_marginTop="@dimen/dim_40dp"
    android:layout_marginBottom="@dimen/dim_20dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dim_10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/dim_25dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/dim_50dp"
                android:layout_height="@dimen/dim_50dp"
                android:background="@drawable/profile2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5dp"
                android:text="Hello"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_8sp"
                app:layout_constraintLeft_toRightOf="@+id/profile_img"
                app:layout_constraintRight_toLeftOf="@id/back"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_5dp"
                android:text="DEW"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/profile_img"
                app:layout_constraintRight_toLeftOf="@+id/back" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dim_15dp"
                android:layout_height="@dimen/dim_20dp"
                android:layout_marginRight="@dimen/dim_30dp"
                android:background="@drawable/back_button_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_100dp"
    android:layout_margin="@dimen/dim_10dp"
    app:cardCornerRadius="@dimen/dim_10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <TextView
            android:id="@+id/league_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="Premier League"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/team1_image"
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_50dp"
            android:layout_marginLeft="@dimen/dim_10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/league_name" />

        <TextView
            android:id="@+id/team1_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="SV"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintLeft_toRightOf="@+id/team1_image"
            app:layout_constraintTop_toBottomOf="@+id/league_name" />


        <ImageView
            android:id="@+id/team2_image"
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_50dp"
            android:layout_marginRight="@dimen/dim_10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/league_name" />

        <TextView
            android:id="@+id/team2_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_50dp"
            android:layout_marginRight="@dimen/dim_10dp"
            android:gravity="center_vertical"
            android:text="DTA"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintRight_toLeftOf="@+id/team2_image"
            app:layout_constraintTop_toBottomOf="@+id/league_name" />

        <TextView
            android:id="@+id/time_left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_20dp"
            android:gravity="center"
            android:text="6 h 05 m left"
            android:textColor="@color/red"
            android:textSize="@dimen/dim_8sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
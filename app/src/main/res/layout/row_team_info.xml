<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_80dp"
    android:paddingLeft="@dimen/dim_20dp"
    android:paddingRight="@dimen/dim_20dp">

    <ImageView
        android:id="@+id/player_img"
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        android:layout_marginLeft="@dimen/dim_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/payment_name"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/player_name"
        android:layout_width="@dimen/dim_0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Wallet"
        app:layout_constraintBottom_toTopOf="@+id/margin_layout"
        app:layout_constraintLeft_toRightOf="@+id/player_img"
        app:layout_constraintRight_toLeftOf="@+id/point"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/point"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Wallet"
        app:layout_constraintBottom_toTopOf="@+id/margin_layout"
        app:layout_constraintLeft_toRightOf="@+id/player_name"
        app:layout_constraintRight_toLeftOf="@+id/credit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/credit"
        android:layout_width="@dimen/dim_0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Wallet"
        app:layout_constraintBottom_toTopOf="@+id/margin_layout"
        app:layout_constraintLeft_toRightOf="@+id/point"
        app:layout_constraintRight_toLeftOf="@+id/add_bt"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_bt"
        android:layout_width="@dimen/dim_30dp"
        android:layout_height="@dimen/dim_30dp"
        android:background="@drawable/ic_menu_camera"
        android:gravity="center"
        android:text="Wallet"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/margin_layout"
        app:layout_constraintLeft_toRightOf="@+id/credit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/margin_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dim_70dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".team.TeamFrag">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="@dimen/dim_10dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_bt"
            android:layout_width="@dimen/dim_15dp"
            android:layout_height="@dimen/dim_20dp"
            android:layout_marginLeft="@dimen/dim_20dp"
            android:layout_marginTop="@dimen/dim_20dp"
            android:background="@drawable/back_button_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_20dp"
            android:gravity="top"
            android:text="Create  Team"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/top_layout">

        <TextView
            android:id="@+id/player_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_20dp"
            android:text="Players"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/credit_left_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_20dp"
            android:text="Credit Left"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max 7 Player from team"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_10sp"
            android:id="@+id/max_player_tv"
            app:layout_constraintLeft_toRightOf="@+id/player_v"
            app:layout_constraintRight_toLeftOf="@+id/credit_left_v"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/total_selected_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_15sp"
            app:layout_constraintRight_toLeftOf="@+id/slash_symb"
            app:layout_constraintStart_toStartOf="@id/player_v"
            app:layout_constraintTop_toBottomOf="@+id/player_v" />

        <TextView
            android:id="@+id/slash_symb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_15sp"
            app:layout_constraintLeft_toRightOf="@+id/total_selected_player"
            app:layout_constraintTop_toBottomOf="@+id/player_v" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:id="@+id/total_player_no_tv"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_15sp"
            app:layout_constraintLeft_toRightOf="@id/slash_symb"
            app:layout_constraintTop_toBottomOf="@+id/player_v" />

        <TextView
            android:id="@+id/credit_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_40dp"
            android:text="110.0"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_15sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/credit_left_v" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40dp"
            android:background="@drawable/bottom_curve"
            app:layout_constraintTop_toBottomOf="@id/credit_left" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/layout3">

        <ImageView
            android:id="@+id/team1_img"
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_50dp"
            android:layout_marginLeft="@dimen/dim_30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/team1_name"
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_50dp"
            android:gravity="center"
            android:text="MI"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_20sp"
            app:layout_constraintLeft_toRightOf="@+id/team1_img"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/team1_circle_img"
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_50dp"
            app:layout_constraintLeft_toRightOf="@+id/team1_name"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/team2_img"
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_50dp"
            android:layout_marginLeft="@dimen/dim_50dp"
            android:layout_marginRight="@dimen/dim_20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/team2_name"
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_50dp"
            android:gravity="center"
            android:text="CSK"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_20sp"
            app:layout_constraintRight_toLeftOf="@+id/team2_img"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/team2_circle_img"
            android:layout_width="@dimen/dim_50dp"
            android:layout_height="@dimen/dim_50dp"
            app:layout_constraintRight_toLeftOf="@+id/team2_name"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/layout4" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/colorAccent" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_35dp"
        android:background="@color/gray"
        android:paddingLeft="@dimen/dim_20dp"
        android:paddingRight="@dimen/dim_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout">


        <TextView
            android:id="@+id/player_name"
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="PLAYERS"
            app:layout_constraintBottom_toTopOf="@+id/margin_layout"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/point"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="POINTS"
            app:layout_constraintBottom_toTopOf="@+id/margin_layout"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/player_name"
            app:layout_constraintRight_toLeftOf="@+id/credit"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/credit"
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="CREDITS"
            app:layout_constraintBottom_toTopOf="@+id/margin_layout"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/point"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/margin_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dim_70dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="10dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/layout1">

    </android.support.v4.view.ViewPager>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50dp"
        android:background="@color/colorPrimary"
        android:padding="@dimen/dim_10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/team_preview_bt"
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_30dp"
            android:layout_marginRight="@dimen/dim_30dp"
            android:background="@drawable/curve_outline"
            android:text="TEAM PREVIEW"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/continue_bt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/continue_bt"
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_30dp"
            android:layout_marginRight="@dimen/dim_30dp"
            android:background="@drawable/curve_outline"
            android:enabled="false"
            android:text="CONTINUE"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/team_preview_bt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>